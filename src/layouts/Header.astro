---
const {color} = Astro.props;
---
<style>
    header {
        height: var(--header-h);
        border-bottom: 2px solid;
        border-color: inherit;
        display: flex;
    }
    header > div {
        display: flex;
        align-items: center;
        padding: 16px 8px;
    }
    .left {
        flex-grow: 1;
    }
    .right {
        flex-basis: var(--header-h);
        border-left: 2px solid;
        border-color: inherit;
    }
</style>
<header>
    <div class="left">
        <slot name="lhs"></slot>
    </div>
    <div class="right">
    </div>
</header>