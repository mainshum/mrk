<style is:global>
    @font-face {
        font-family: 'Monarcha';
        src: url('/fonts/Monarcha/font.woff') format('woff');
        font-weight: normal;
    }
    @font-face {
        font-family: 'Monarcha Bold';
        src: url('/fonts/MonarchaBold/font.woff') format('woff');
        font-weight: bold;
    }
    html {
        --primary-color: rgb(102, 20, 181);
        --secondary-color: rgb(240, 231, 222);
        --orange-color: #f6892a;
        --header-h: 100px;

        font-size: 10px;

        --font-massive: 4rem;
        --font-big: 3rem;
        --font-medium: 2.5rem;
        --font-small: 2rem;
        --font-mini: 1.5rem;
    }

    * {
        font-family: 'Monarcha', sans-serif;
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    .bold {
        font-family: 'Monarcha Bold';
        font-weight: bolder;
    }
    a.pestka {
        text-decoration: none;
        color: var(--primary-color);
    }
    body {
        overflow-x: hidden;
    }
    body > div:first-child header .right{
        border-left: none;
    }
    .page:first-of-type header {
        border-top: none;
    }
    .page_violet {
        background: var(--primary-color);
    }
    .page_white {
        background: var(--secondary-color);
    }
    .pad-body {
        padding: 20px;
    }

    .img-res {
        width: 400px;
        height: auto;
    }

    @media(max-width: 800px) {
        .img-res {
            width: 300px;
        }
    }
    @media(max-width: 600px) {
        .img-cont {
            flex-direction: column;
            gap: 0px;
        }
        .img-res {
            /* border-top: 2px solid var(--primary-color); */
            width: 70%;
            height: auto;
        }
    }

</style>

