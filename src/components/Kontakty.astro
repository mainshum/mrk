        ['Paulina Puchalska', 'redakcja i korekty tekstów'],
        ['Magda Domagała', 'przekład tekstów na język angielski'],
        ['Czarek Polak', 'web development'],
        ['Aleksander Przeszło', 'web development'],
        ['Maria Zdulska', 'rachunkowość i księgowość'],
    ],
}

const plTrans = {
    header: 'Kontakt',
    phone: 'Telefon',
    email: 'E-mail',
    fb: 'Grupa dla osób Bezpestkowych',
    fbSupport: 'Grupa dla osób wspierających osoby Bezpestkowe',
    patronite: 'Wesprzyj nas na Patronite.pl',
    teamHeader: 'Zespół:',
    coop: 'Współpraca:',
    daneFund: 'Dane fundacji',
} as const;

type T = keyof typeof plTrans;

const rest: Record<Lang, Record<T, string>> = {
    "pl": plTrans,
    "en": plTrans,
    "uk": plTrans,
};

const pp = people[lang];
const rr = rest[lang];
---
<style>
    .info {
        font-size: 1.8rem;
    }
    
</style>
<Page color="white">
    <Header slot="header">
        <PageTitle slot="lhs" title={rr.header}/>
    </Header>
    <div class="info" slot="body">
        <section class="info">
            <div>
                <span>{rr.phone}</span>
                <span>+48 733 083 370</span>
            </div>
            <div>
                <span>{rr.email}</span>
                <span>bezpestkowe@gmail.com</span>
            </div>
            <div>
                <span>{rr.email}</span>
                <span>@bezpestkowe</span>
            </div>
            <div>
                <span>IKONA</span>
                <span>{rr.fb}</span>
            </div>
            <div>
                <span>IKONA</span>
                <span>{rr.fbSupport}</span>
            </div>
        </section>
        <section class="leads">
            <div>{rr.teamHeader}</div>
            <div>
                <span>{pp[0][0]}</span>
                <span>-</span>
                <span>{pp[0][1]}</span>
            </div>
            <div>
                <span>{pp[1][0]}</span>
                <span>-</span>
                <span>{pp[1][1]}</span>
            </div>
        </section>
        <section class="other">
            <div>{rr.coop}</div>
            {pp.map(([name, pos]) => (
                <div>
                    <span>{name}</span>
                    <span>-</span>
                    <span>{pos}</span>
                </div>
            ))}
        </section>
        <section class="krs">
            <div>{rr.daneFund}</div>
            <div>
                <span>KRS</span>
                <span>-</span>
                <span>0000951776</span>
            </div>
            <div>
                <span>NIP</span>
                <span>-</span>
                <span>5862377596</span>
            </div>
            <div>
                <span>REGON</span>
                <span>-</span>
                <span>521286817</span>
            </div>
        </section>
    </div>
</Page>