---
interface Props {
    lang: Lang
}

import Main from "../layouts/Main.astro";
import Gabinety from "./Gabinety.astro";
import type { Lang } from "../types";
import Kontakty from "./Kontakty.astro";
import Relacje from "./Relacje.astro";

const {lang} = Astro.props;
---

<Main>
	<Relacje lang={lang} />
	{lang !== 'pl' ? null : (
		<Gabinety lang={lang} />
	)}
	<Kontakty lang={lang} />
</Main>