---
interface Props {
    lang: Lang
}

import Main from "../layouts/Main.astro";
import Gabinety from "./Gabinety.astro";
import type { Lang } from "../types";
import Kontakty from "./Kontakty.astro";
import Relacje from "./Relacje.astro";
import Start from "./Start.astro";
import Strona2 from "./Strona2.astro";
import MRKH from "./MRKH.astro";
import HowToTalk from "./HowToTalk.astro";

const {lang} = Astro.props;
---

<Main>
	<Start lang={lang} />
	<Strona2 lang={lang} />
	<MRKH lang={lang} />
	<HowToTalk lang={lang} />
	<Relacje lang={lang} />
	{lang !== 'pl' ? null : (
		<Gabinety lang={lang} />
	)}
	<Kontakty lang={lang} />
</Main>